{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "STM8L052C6 - App示例",
            "description": "STM8L052C6 App示例项目配置",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/stm8l-app",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/../cmake/sdcc-generic.cmake"
                },
                "CMAKE_MODULE_PATH": {
                    "type": "PATH",
                    "value": "${sourceDir}/../cmake"
                },
                "STM8_CHIP": {
                    "type": "STRING",
                    "value": "stm8l052c6"
                },
                "STM8_StdPeriph_DIR": {
                    "type": "PATH",
                    "value": "${sourceDir}/../source/StdPeriph"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "默认构建",
            "configurePreset": "default"
        }
    ]
}

